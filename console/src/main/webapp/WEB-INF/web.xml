<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <display-name>Apache Kalumet Console</display-name>

   <servlet>
      <servlet-name>KalumetConsoleServlet</servlet-name>
      <servlet-class>org.apache.kalumet.console.app.KalumetConsoleServlet</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>KalumetConfigurationWrapperServlet</servlet-name>
      <servlet-class>org.apache.kalumet.console.services.KalumetConfigurationWrapperServlet</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>KalumetJournalEventAppenderServlet</servlet-name>
      <servlet-class>org.apache.kalumet.console.services.KalumetJournalEventAppenderServlet</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>KalumetConsoleServlet</servlet-name>
      <url-pattern>/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>KalumetConfigurationWrapperServlet</servlet-name>
      <url-pattern>/ConfigurationWrapper</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>KalumetJournalEventAppenderServlet</servlet-name>
      <url-pattern>/JournalEventAppender</url-pattern>
   </servlet-mapping>

</web-app>
